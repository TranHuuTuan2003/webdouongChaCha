@model List<BaoCaoWebNangCao.Models.TAIKHOAN>
@{
    ViewBag.Title = "Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<style>
    table tr:first-child {
        background-color: #6cc0f5;
        color: #ffffff;
    }

    table tr:nth-child(2n) {
        background-color: #ccc;
    }
</style>
<h2>Tài Khoản</h2>
<a href="@Url.Action("Create","TaiKhoan",new {area="Admin"})">Tạo Tài Khoản</a>
<form class="d-flex flex-row align-items-center flex-wrap" action="/Admin/TaiKhoan/Index">
    <lable for="search" class="mx-2 my-1">Tìm Kiếm</lable>
    <input type="search" class="form-control w-auto" id="search" name="search" value="@ViewBag.Search" placeholder="Tên người dùng" />
    <button type="submit" class="btn btn-primary mx-2">Tìm Kiếm</button>
</form>
<table class="table">
    <tr>
        @*<th>ID</th>*@
        <th>Tên Đăng Nhập</th>
        <th>Mật Khẩu</th>
        <th>Loại Tài Khoản</th>
        <th>Tên Người Dùng</th>
        <th>Ảnh Đại Diện</th>
        @*<th>Ngày Sinh</th>
        <th>Địa chỉ</th>
        <th>Số Điện Thoại</th>
        <th>Email</th>
        <th>Giới Tính</th>*@
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    @*<td>@item.ID</td>*@
                    <td>@item.TENDANGNHAP</td>
                    <td>@item.MATKHAU</td>
                    <td>@item.LOAITAIKHOAN</td>
                    <td>@item.TENNGUOIDUNG</td>
                    <td>
                        <img src="@item.HINHANH" style="width:100px; height:100px" />
                    </td>
                    @*<td>@item.NGAYSINH</td>
                    <td>@item.DIACHI</td>
                    <td>@item.SODIENTHOAI</td>
                    <td>@item.EMAIL</td>
                    <td>@item.GIOITINH</td>*@
                    <td><a class="btn btn-success" href="@Url.Action("Detail","TaiKhoan", new {area="Admin", id = item.ID})">Chi Tiết</a></td>
                    <td><a class="btn btn-primary" href="@Url.Action("Edit","TaiKhoan", new {area="Admin", id = item.ID})">Sửa</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("Delete","TaiKhoan", new {area="Admin", id = item.ID})">Xóa</a></td>
                </tr>
            }
</table>

