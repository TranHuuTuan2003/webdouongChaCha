@model List<BaoCaoWebNangCao.Models.CONGTHUC>

@{
    ViewBag.Title = "Công thức pha chế";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<style>
    table tr:first-child {
        background-color: #6cc0f5;
        color: #ffffff;
    }
    table tr:nth-child(2n) {
        background-color: #ccc;
    }
    /*table tr {
        border-bottom: 1px solid #666;
    }*/

</style>

<div style="width: 100%;height: 100%">
    <h2>DANH SACH CÔNG THỨC</h2>
    <a href="@Url.Action("Create","CongThuc",new {area="Admin"})">Thêm Mới Công Thức</a> <br />
    <a href="@Url.Action("Create","DanhMucCongThuc",new {area="Admin"})">Thêm Mới Danh Mục</a>

    <form class="d-flex flex-row align-items-center flex-wrap" action="/Admin/CongThuc/Index" method="post">
        <lable for="search" class="mx-2 my-1">Tìm Kiếm</lable>
        <input type="search" class="form-control w-auto" id="search" name="search" placeholder="Tên công thức" />
        <button type="submit" class="btn btn-primary mx-2">Tìm Kiếm</button>

        <table class="table border-opacity-10">
            <tr>
                <th>ID</th>
                @*<th>ID Danh Mục</th>*@
                <th>Tên Danh Mục</th>
                <th>Tên Công Thức</th>
                <th>Ngày Đăng Tải</th>
                @*<th>Nguyên Liệu</th>*@
                <th>Hình Ảnh</th>
                @*<th>Nội Dung</th>
                <th>Nội Dung Phụ</th>*@
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    @*<td>@item.IDDANHMUC</td>*@
                    @{
                        if (item.DANHMUCCONGTHUC != null)
                        {
                            <td>@item.DANHMUCCONGTHUC.TENDANHMUC</td>
                        }
                    }
                    <td>@item.TENCONGTHUC</td>
                    <td>@item.NGAYDANGTAI</td>
                    @*<td>@item.NGUYENLIEU</td>*@
                    <td>
                        <img src="@item.HINHANH" style="width:100px; height:100px" />
                    </td>
                    @*<td>@item.NOIDUNG</td>
                    <td>@item.NOIDUNGPHU</td>*@
                    <td><a class="btn btn-success" href="@Url.Action("Detail","CongThuc", new {area="Admin", id = item.ID})">Chi Tiết</a></td>
                    <td><a class="btn btn-primary" href="@Url.Action("Edit","CongThuc", new {area="Admin", id = item.ID})">Sửa</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("Delete","CongThuc", new {area="Admin", id = item.ID})">Xóa</a></td>

                </tr>
            }
        </table>
    </form>
</div>

